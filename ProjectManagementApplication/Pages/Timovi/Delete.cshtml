@page "{id:int}"
@model ProjectManagementApplication.Pages.Timovi.DeleteModel
@{
    ViewData["Title"] = "Obriši Tim";
}

<h1>Obriši Tim</h1>

<p>Da li ste sigurni da želite da obrišete ovaj tim?</p>

<div class="mb-3">
    <p><strong>Naziv tima:</strong> @Model.Tim.Naziv</p>
</div>

<div class="mb-3">
    <p><strong>Projekat:</strong> @Model.Tim.Projekat?.Naziv</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-page="Index" class="btn btn-secondary">Nazad</a>
</form>
