            <i class="bi bi-journal-text me-2"></i> Izveštaj po zaposlenom
        </a>
        <a class="btn btn-light btn-lg text-dark shadow-sm d-flex align-items-center" asp-page="/Izvestaji/Projekat">
            <i class="bi bi-journal-text me-2"></i> Izveštaj po projektu
        </a>
        <a class="btn btn-light btn-lg text-dark shadow-sm d-flex align-items-center" asp-page="/Izvestaji/Tim">
            <i class="bi bi-journal-text me-2"></i> Izveštaj po timu
        </a>
        <a class="btn btn-light btn-lg text-dark shadow-sm d-flex align-items-center" asp-page="/Izvestaji/Statistika">
            <i class="bi bi-graph-up me-2"></i> Statistika
        </a>
    </div> *@
</div>
