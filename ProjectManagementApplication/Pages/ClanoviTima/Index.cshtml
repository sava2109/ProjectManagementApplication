@page
@model ProjectManagementApplication.Pages.ClanoviTima.IndexModel
@{
    ViewData["Title"] = "Članovi Timova";
}

<h1>Članovi Timova</h1>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="CurrentFilter" value="@Model.CurrentFilter" class="form-control" placeholder="Pretraži timove ili člana tima..." />
        <button type="submit" class="btn btn-primary">Pretraži</button>
    </div>
</form>

<a asp-page="Create" class="btn btn-success mb-3">Dodaj člana tima</a>

<div class="mb-2">
    <strong>Sortiraj:</strong>
    <a asp-page="./Index" asp-route-SortOrder="tim_asc" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "tim_asc" ? "fw-bold text-primary" : "")">Tim ↑</a> |
    <a asp-page="./Index" asp-route-SortOrder="tim_desc" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "tim_desc" ? "fw-bold text-primary" : "")">Tim ↓</a> |
    <a asp-page="./Index" asp-route-SortOrder="ime_asc" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "ime_asc" ? "fw-bold text-primary" : "")">Ime ↑</a> |
    <a asp-page="./Index" asp-route-SortOrder="ime_desc" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "ime_desc" ? "fw-bold text-primary" : "")">Ime ↓</a> |
    <a asp-page="./Index" asp-route-SortOrder="prezime_asc" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "prezime_asc" ? "fw-bold text-primary" : "")">Prezime ↑</a> |
    <a asp-page="./Index" asp-route-SortOrder="prezime_desc" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "prezime_desc" ? "fw-bold text-primary" : "")">Prezime ↓</a>
</div>

@if (Model.Clanovi != null && Model.Clanovi.Any())
{
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Tim</th>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Uloga</th>
                <th>Datum pridruživanja</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var clan in Model.Clanovi)
            {
                <tr>
                    <td>@clan.Tim.Naziv</td>
                    <td>@clan.Zaposleni.Ime</td>
                    <td>@clan.Zaposleni.Prezime</td>
                    <td>@clan.Uloga</td>
                    <td>@clan.DatumPridruzivanja.ToShortDateString()</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@clan.Id" class="btn btn-sm btn-warning">Izmeni</a>
                        <a asp-page="Details" asp-route-id="@clan.Id" class="btn btn-sm btn-info">Detalji</a>
                        <a asp-page="Delete" asp-route-id="@clan.Id" class="btn btn-sm btn-danger">Obriši</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-muted">Nema pronađenih članova tima.</p>
}
