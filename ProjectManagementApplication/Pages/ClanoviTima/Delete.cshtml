@page "{id:int}"
@model ProjectManagementApplication.Pages.ClanoviTima.DeleteModel
@{
    ViewData["Title"] = "Obriši Člana Tima";
}

<h1>Obriši Člana Tima</h1>

<p>Da li ste sigurni da želite da obrišete ovog člana tima?</p>

<div class="mb-3">
    <p><strong>Tim:</strong> @Model.ClanTima.Tim.Naziv</p>
</div>

<div class="mb-3">
    <p><strong>Zaposleni:</strong> @Model.ClanTima.Zaposleni.Ime @Model.ClanTima.Zaposleni.Prezime</p>
</div>

<div class="mb-3">
    <p><strong>Uloga:</strong> @Model.ClanTima.Uloga</p>
</div>

<div class="mb-3">
    <p><strong>Datum pridruživanja:</strong> @Model.ClanTima.DatumPridruzivanja.ToShortDateString()</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-page="Index" class="btn btn-secondary">Nazad</a>
</form>
