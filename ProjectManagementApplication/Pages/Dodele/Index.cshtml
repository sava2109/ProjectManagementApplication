@page
@model ProjectManagementApplication.Pages.Dodele.IndexModel
@{
    ViewData["Title"] = "Dodele zadataka";
}

<h1>Dodele zadataka</h1>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="CurrentFilter" value="@Model.CurrentFilter" class="form-control" placeholder="Pretraži dodele zadataka..." />
        <button type="submit" class="btn btn-primary">Pretraži</button>
    </div>
</form>

<a asp-page="Create" class="btn btn-success mb-3">Dodaj novu dodelu zadatka</a>

<div class="mb-2">
    <strong>Sortiraj:</strong>
    <a asp-page="./Index" asp-route-SortOrder="aktivnost_asc" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "aktivnost_asc" ? "fw-bold text-primary" : "")">Aktivnost ↑</a> |
    <a asp-page="./Index" asp-route-SortOrder="aktivnost_desc" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "aktivnost_desc" ? "fw-bold text-primary" : "")">Aktivnost ↓</a> |
    <a asp-page="./Index" asp-route-SortOrder="ime_asc" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "ime_asc" ? "fw-bold text-primary" : "")">Ime ↑</a> |
    <a asp-page="./Index" asp-route-SortOrder="ime_desc" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "ime_desc" ? "fw-bold text-primary" : "")">Ime ↓</a> |
    <a asp-page="./Index" asp-route-SortOrder="prezime_asc" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "prezime_asc" ? "fw-bold text-primary" : "")">Prezime ↑</a> |
    <a asp-page="./Index" asp-route-SortOrder="prezime_desc" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "prezime_desc" ? "fw-bold text-primary" : "")">Prezime ↓</a>
</div>

@if (Model.Dodele != null && Model.Dodele.Any())
{
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Aktivnost</th>
                <th>Zaposleni</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model.Dodele)
            {
                <tr>
                    <td>@d.Aktivnost.Naziv</td>
                    <td>@d.Zaposleni.Ime @d.Zaposleni.Prezime</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@d.Id" class="btn btn-sm btn-warning">Izmeni</a>
                        <a asp-page="Details" asp-route-id="@d.Id" class="btn btn-sm btn-info">Detalji</a>
                        <a asp-page="Delete" asp-route-id="@d.Id" class="btn btn-sm btn-danger">Obriši</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-muted">Nema pronađenih dodela zadataka.</p>
}
