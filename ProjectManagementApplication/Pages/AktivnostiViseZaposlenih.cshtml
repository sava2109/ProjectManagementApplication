@page
@model ProjectManagementApplication.Pages.AktivnostiViseZaposlenihModel
@{
    ViewData["Title"] = "Aktivnosti sa više zaposlenih";
}

<h1>@ViewData["Title"]</h1>

@if (!Model.AktivnostiLista.Any())
{
    <p>Nema aktivnosti na kojima radi više zaposlenih.</p>
}
else
{
    <div class="accordion" id="aktivnostiAccordion">
        @for (int i = 0; i < Model.AktivnostiLista.Count; i++)
        {
            var aktivnost = Model.AktivnostiLista[i];
            var collapseId = $"collapse_{aktivnost.Aktivnost.Id}";
            var headingId = $"heading_{aktivnost.Aktivnost.Id}";
            <div class="accordion-item">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button collapsed" type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#@collapseId"
                            aria-expanded="false"
                            aria-controls="@collapseId">
                        @aktivnost.Aktivnost.Naziv (@aktivnost.Zaposleni.Count zaposlenih)
                    </button>
                </h2>
                <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId">
                    <div class="accordion-body">
                        <ul>
                            @foreach (var z in aktivnost.Zaposleni)
                            {
                                <li>@z.Ime @z.Prezime - @z.Pozicija</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
}
