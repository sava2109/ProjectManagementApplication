@page
@model ProjectManagementApplication.Pages.Projekti.IndexModel
@{
    ViewData["Title"] = "Projekti";
}

<h1>Projekti</h1>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="CurrentFilter" value="@Model.CurrentFilter" class="form-control" placeholder="Pretraži projekte..." />
        <button type="submit" class="btn btn-primary">Pretraži</button>
    </div>
</form>

<a asp-page="Create" class="btn btn-success mb-3">Dodaj novi projekat</a>

<div class="mb-2">
    Sortiraj:
    <a asp-route-SortOrder="naziv"
       asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "naziv" ? "fw-bold text-primary" : "")">Naziv ↑</a> |
    <a asp-route-SortOrder="naziv_desc"
       asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "naziv_desc" ? "fw-bold text-primary" : "")">Naziv ↓</a> |
    <a asp-route-SortOrder="planirani"
       asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "planirani" ? "fw-bold text-primary" : "")">Planirani Sati ↑</a> |
    <a asp-route-SortOrder="planirani_desc"
       asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "planirani_desc" ? "fw-bold text-primary" : "")">Planirani Sati ↓</a>
</div>

@if (Model.Projekti != null && Model.Projekti.Any())
{
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Naziv</th>
                <th>Opis</th>
                <th>Planirani sati</th>
                <th>Datum početka</th>
                <th>Datum završetka</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var projekat in Model.Projekti)
            {
                <tr>
                    <td>@projekat.Naziv</td>
                    <td>@projekat.Opis</td>
                    <td>@projekat.PlaniraniSati</td>
                    <td>@projekat.DatumPocetka.ToShortDateString()</td>
                    <td>@projekat.DatumZavrsetka.ToShortDateString()</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@projekat.Id" class="btn btn-sm btn-warning">Izmeni</a>
                        <a asp-page="Details" asp-route-id="@projekat.Id" class="btn btn-sm btn-info">Detalji</a>
                        <a asp-page="Delete" asp-route-id="@projekat.Id" class="btn btn-sm btn-danger">Obriši</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-muted">Nema pronađenih projekata.</p>
}
