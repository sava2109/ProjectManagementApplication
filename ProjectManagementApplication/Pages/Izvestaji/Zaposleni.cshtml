@page
@model ProjectManagementApplication.Pages.Izvestaji.ZaposleniModel
@{
    ViewData["Title"] = "Izveštaj po zaposlenom";
}

<h1 class="mb-4">📊 Izveštaj po zaposlenom</h1>

<form method="get" class="mb-4">
    <div class="form-group mb-2">
        <label for="zaposleniId">Zaposleni:</label>
        <select id="zaposleniId" name="zaposleniId" class="form-control w-50" asp-items="Model.ZaposleniSelect">
            <option value="">-- Izaberite zaposlenog --</option>
        </select>
    </div>
    <div class="form-group mb-2">
        <label>Godina:</label>
        <input type="number" name="godina" value="@Model.Godina" class="form-control w-25" />
    </div>
    <div class="form-group mb-2">
        <label>Mesec:</label>
        <input type="number" name="mesec" value="@Model.Mesec" class="form-control w-25" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Traži</button>
</form>

@if (Model.Izvestaj != null)
{
    <div class="card mb-4">
        <div class="card-body">
            <h3>👤 @Model.Izvestaj.Zaposleni</h3>
            <p>Ukupno aktivnosti: <strong>@Model.Izvestaj.UkupnoAktivnosti</strong></p>
        </div>
    </div>

    @foreach (var projekat in Model.Izvestaj.Projekti)
    {
        <div class="card mb-3">
            <div class="card-header bg-light">
                Projekat: @projekat.Naziv
                <span class="text-muted">📅 @projekat.DatumPocetka.ToShortDateString() - @projekat.DatumZavrsetka.ToShortDateString()</span>
            </div>
            <div class="card-body">
                @foreach (var rp in projekat.RadniPaketi)
                {
                    <p>🗂 Radni paket: <strong>@rp.Naziv</strong></p>
                    @foreach (var zad in rp.Zadaci)
                    {
                        <p>✅ Zadatak: <strong>@zad.Naziv</strong></p>
                        <table class="table table-sm table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Aktivnost</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var akt in zad.Aktivnosti)
                                {
                                    <tr>
                                        <td>@akt.Naziv</td>

                                        <td>
                                            @if (akt.Status.ToLower() == "završeno" || akt.Status.ToLower() == "zavrseno")
                                            {
                                                <span class="text-success">🟢 @akt.Status</span>
                                            }
                                            else if (akt.Status.ToLower() == "u toku")
                                            {
                                                <span class="text-warning">🟡 @akt.Status</span>
                                            }
                                            else if (akt.Status.ToLower() == "kasnjenje")
                                            {
                                                <span class="text-danger">🔴 @akt.Status</span>
                                            }
                                            else if (akt.Status.ToLower() == "planirano")
                                            {
                                                <span class="text-primary">🔵 @akt.Status</span>
                                            }
                                            else
                                            {
                                                <span>@akt.Status</span>
                                            }
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                }
            </div>
        </div>
    }
}
