@page
@model ProjectManagementApplication.Pages.Aktivnosti.IndexModel
@{
    ViewData["Title"] = "Aktivnosti";
}

<h1>Aktivnosti</h1>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="CurrentFilter" value="@Model.CurrentFilter" class="form-control" placeholder="Pretraži aktivnosti..." />
        <button type="submit" class="btn btn-primary">Pretraži</button>
    </div>
</form>

<a asp-page="Create" class="btn btn-success mb-3">Dodaj novu aktivnost</a>

<div class="mb-2">
    Sortiraj:
    <a asp-route-SortOrder="naziv" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "naziv" ? "fw-bold text-primary" : "")">Naziv ↑</a> |
    <a asp-route-SortOrder="naziv_desc" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "naziv_desc" ? "fw-bold text-primary" : "")">Naziv ↓</a> |
    <a asp-route-SortOrder="sati" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "sati" ? "fw-bold text-primary" : "")">Planirani Sati ↑</a> |
    <a asp-route-SortOrder="sati_desc" asp-route-CurrentFilter="@Model.CurrentFilter"
       class="@(Model.SortOrder == "sati_desc" ? "fw-bold text-primary" : "")">Planirani Sati ↓</a>
</div>

@if (Model.Aktivnosti != null && Model.Aktivnosti.Any())
{
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Naziv</th>
                <th>Opis</th>
                <th>Planirani Sati</th>
                <th>Zadatak</th>
                <th>Status</th>   @* ➡ Dodato *@
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Aktivnosti)
            {
                <tr>
                    <td>@a.Naziv</td>
                    <td>@a.Opis</td>
                    <td>@a.PlaniraniSati</td>
                    <td>@a.Zadatak?.Naziv</td>
                    <td>@a.Status</td>   @* ➡ Dodato *@
                    <td>
                        <a asp-page="Edit" asp-route-id="@a.Id" class="btn btn-sm btn-warning">Izmeni</a>
                        <a asp-page="Details" asp-route-id="@a.Id" class="btn btn-sm btn-info">Detalji</a>
                        <a asp-page="Delete" asp-route-id="@a.Id" class="btn btn-sm btn-danger">Obriši</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-muted">Nema pronađenih aktivnosti.</p>
}
