@page "{id:int}"
@model ProjectManagementApplication.Pages.ZaposleniPages.DeleteModel
@{
    ViewData["Title"] = "Obriši Zaposlenog";
}

<h1>Obriši Zaposlenog</h1>

<p>Da li ste sigurni da želite da obrišete ovog zaposlenog?</p>

<div class="mb-3">
    <strong>Ime:</strong> @Model.Zaposleni.Ime
</div>
<div class="mb-3">
    <strong>Prezime:</strong> @Model.Zaposleni.Prezime
</div>
<div class="mb-3">
    <strong>Email:</strong> @Model.Zaposleni.Email
</div>
<div class="mb-3">
    <strong>Pozicija:</strong> @Model.Zaposleni.Pozicija
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-page="Index" class="btn btn-secondary">Nazad</a>
</form>
